.app
  max-width 1280px
  margin 0 auto
  header
    position fixed
    padding 1.5% 0
    background-color #fff
  .content
    padding-top 7%
    +below(768px)
      margin auto
  .search-bar
    display inline-block
    width 66%
    button
      margin 0 5px
  footer
    text-align right
    margin-right 10%
    margin-bottom 30px
    margin-top 30px
    +below(768px)
      text-align center
      margin-right 0

  .search-bar-input
    display inline-block
    input
      width 200px
      padding 8px 12px
      border 1px black solid
      border-radius 15px
      outline none !important

.toggle-menu
  position absolute
  top 20px
  right 20px
  display none !important
  cursor pointer
  z-index 10
  +below(768px)
    display inline-block !important


.sidebar
  padding-top 7%
  z-index 20
  +below(768px)
    display none

.sidebar-mobile
  display none
  padding-top 7%
  z-index 20
  +below(768px)
    display block
    position fixed
    overflow hidden
    height 100vh
    width 100%
    padding-top 0
    margin-top 11%
    background-color rgba(93,96,102,.9)
    .sidebar-title
      padding 8px 0
      cursor pointer
      text-align center
      color white
      &:hover
        background-color #337ab7
    .sidebar-list,
    a
      color white



.sidebar-item
  margin 20px 0
  .sidebar-list
    padding-left 30px
    padding-right 60px
    li
      padding 5px 10px

.sidebar-title
  font-size 16px
  font-weight 700
  margin-bottom 20px


//Class to set a link active, works with ng-class
.link-active
  color black
  text-decoration none
  pointer-events none

//displays the submenu
.manage-active
  background-color rgba(198,195,216,0.75)
  .manage-link
    display block

.manage-link
  display none
  margin-top 5px
  font-size 12px
  span
    margin 0 5px

.pagination-gap
  li
    display inline-block
    a
      padding 5px 10px
      text-decoration none
      margin: 0 4px
      border-radius: 8px !important
      color: #76838f
      transition: background-color 0.45s
      transition: border-color 0.45s
    a:hover
      background-color: transparent
      border-color: #337ab7
      color: #337ab7
      transition: background-color 0.45s
      transition: border-color 0.45

.pagination>.pag-active>a,
.pagination>.pag-active>a:focus,
.pagination>.pag-active>a:hover
  z-index: 3
  color: white
  cursor: default
  background-color: #337ab7
  border-color: #337ab7

.disabled
  color gray
  border gray
  opacity .5

