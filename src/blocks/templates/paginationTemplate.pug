ul.pagination.pagination-gap(ng-if='1 < pages.length || !autoHide')
  li(ng-if='boundaryLinks', ng-class='{ disabled : pagination.current == 1 }')
    a(href='', ng-click='setCurrent(1)')
      i.fa.fa-backward
  li(ng-if='directionLinks', ng-class='{ disabled : pagination.current == 1 }')
    a(href='', ng-click='setCurrent(pagination.current - 1)')
      i.fa.fa-caret-left
  li(ng-repeat='pageNumber in pages track by tracker(pageNumber, $index)', ng-class="{'pag-active' : pagination.current == pageNumber, disabled : pageNumber == '...' }")
    a(href='', ng-click='setCurrent(pageNumber)') {{ pageNumber }}
  li(ng-if='directionLinks', ng-class='{ disabled : pagination.current == pagination.last }')
    a(href='', ng-click='setCurrent(pagination.current + 1)')
      i.fa.fa-caret-right
  li(ng-if='boundaryLinks', ng-class='{ disabled : pagination.current == pagination.last }')
    a(href='', ng-click='setCurrent(pagination.last)')
      i.fa.fa-forward
